<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="../images/fav-icon.png" />
    <title>Insect Dashboard - Home</title>
    <link rel="stylesheet" href="style.css" />
    <!----===== Boxicons CSS ===== -->
    <link
      href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- <script src="https://d3js.org/d3.v5.min.js"></script> -->
  </head>
  <body>
    <nav class="sidebar">
      <header>
        <div class="image-text">
          <span class="image">
            <img src="../images/fav-icon.png" alt="" />
          </span>

          <!-- <div class="text logo-text">
            <span class="name">Diopsis</span>
          </div> -->
        </div>
      </header>

      <div class="menu-bar">
        <div class="menu">
          <ul class="menu-links">
            <li class="nav-link">
              <a href="#">
                <i class="bx bxs-map-pin"></i>
              </a>
            </li>
          </ul>
        </div>

        <div class="bottom-content">
          <li class="mode">
            <div class="toggle-switch">
              <span class="switch"></span>
            </div>
          </li>
        </div>
      </div>
    </nav>

    <section class="home">
      <form id="filterForm">
        <div class="form-field">
          <span><i class="bx bx-current-location"></i></span>
          <span>
            <label for="locationDropdown">Select Location:</label>
            <select id="locationDropdown">
              <option value="All">All Locations</option>
              <% data.forEach(item => { %>
              <option value="<%= item.location_name %>">
                <%= item.location_name %>
              </option>
              <% }); %>
            </select>
          </span>
        </div>

        <div class="form-field">
          <span><i class="bx bx-current-location"></i></span>

          <span>
            <label for="identificationDropdown">Select Identification:</label>
            <select id="identificationDropdown">
              <option value="All">All Identifications</option>
              <% data.forEach(item => { %>
              <option value="<%= item.identification_nl %>">
                <%= item.identification_nl %>
              </option>
              <% }); %>
            </select>
          </span>
        </div>

        <div class="form-field">
          <button id="updateBtn" type="button">
            <i class="bx bxs-send"></i>
          </button>
        </div>
      </form>

      <div id="chart"></div>

      <div id="tooltip" class="tooltip" style="opacity: 0"></div>
    </section>

    <section class="sidebarMenu">
      <div class="biomass">
        <h3>BiomassGrowth</h3>

        <div class="widget">
          <div id="pie-chart" class="pie-container"></div>
        </div>

        <ul>
          <li>
            <span><b>+35%</b></span
            ><span>Species 1</span>
          </li>
          <li>
            <span><b>+25%</b></span
            ><span>Species 2</span>
          </li>
          <li>
            <span><b>+40%</b></span
            ><span>Species 3</span>
          </li>
        </ul>
      </div>

      <div class="grafieken">
        <h3>Andere grafieken</h3>
        <ul>
          <li><i class='bx bxs-bar-chart-alt-2' ></i><span>Grafiek 1</span></li>
          <li><i class='bx bxs-bar-chart-alt-2' ></i><span>Grafiek 2</span></li>
          <li><i class='bx bxs-bar-chart-alt-2' ></i><span>Grafiek 3</span></li>
          <li><i class='bx bxs-bar-chart-alt-2' ></i><span>Grafiek 4</span></li>
        </ul>
      </div>
    </section>

    <script type="module" src="script.js"></script>
  </body>
</html>
